{
  "manifest_version": 3,
  "name": "Chessist",
  "version": "1.0.0",
  "description": "Live chess evaluation bar for Chess.com - powered by Stockfish",
  "permissions": [
    "storage",
    "offscreen",
    "tabs",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://www.chess.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.chess.com/*"],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/engine/*", "src/offscreen/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
